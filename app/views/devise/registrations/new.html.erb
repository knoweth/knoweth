<div class="mr-auto ml-auto p-3" style="max-width: 700px">
  <h2 class="text-3xl mb-4">Sign up</h2>

  <%= bootstrap_form_for(resource, layout: :horizontal, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="grid grid-cols-1 gap-6">
      <%= render "devise/shared/error_messages", resource: resource %>

      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>

      <%= f.password_field :password, autocomplete: "new-password" %>

      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>

      <p><%= f.submit "Sign up", :class => "btn btn-blue" %></p>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>