<h2 class="text-3xl mb-4">Change your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="grid grid-cols-1 gap-6">
    <div>
      <%= f.label :password, "New password" %><br />
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "block" %>
    </div>

    <div>
      <%= f.label :password_confirmation, "Confirm new password" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "block" %>
    </div>

    <div>
      <%= f.submit "Change my password", class: "btn btn-blue" %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
