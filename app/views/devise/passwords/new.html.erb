<div class="mr-auto ml-auto p-3" style="max-width: 700px">
  <h2 class="text-3xl mb-4">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <div class="grid grid-cols-1 gap-6 mb-4">
      <%= render "devise/shared/error_messages", resource: resource %>
      <p><%= f.label :email, "Email" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block" %></p>
      <p><%= f.submit "Send me reset password instructions", :class => "btn btn-blue" %></p>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>