<div class="mr-auto ml-auto p-3" style="max-width: 700px">
  <h2>Log in to Knoweth</h2>

  <%= bootstrap_form_for(resource, layout: :horizontal, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>

    <%= f.password_field :password, autocomplete: "current-password" %>

    <% if devise_mapping.rememberable? %>
      <p><%= f.check_box :remember_me %></p>
    <% end %>

    <p><%= f.submit "Log in" %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>