<h1 class="text-3xl mb-4">New Document</h1>

<%= form_with scope: :document, url: documents_path, local: true do |form| %>
  <div class="grid grid-cols-1 gap-6">
    <p>
      <%= form.label :title %><br>
      <%= form.text_field :title %>
    </p>
  
    <p>
      <%= form.submit 'Submit', :class => "btn btn-blue" %>
    </p>
  </div>
<% end %>